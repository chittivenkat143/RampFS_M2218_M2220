<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
	<bean id="org" class="com.hcl.training.pojos.Orgination">
		<constructor-arg name="name" value="HCL Tech School"/>
		<constructor-arg name="address" value="Hyderabad"/>
		
		<property name="departments">
			<list>
				<ref bean="deptComputer"/>
				<ref bean="deptScience"/>
				<ref bean="deptMath"/>
			</list>
		</property>
	</bean>
	
	<!-- Department Beans -->
	<bean id="deptComputer" class="com.hcl.training.pojos.Department" init-method="initMethod" destroy-method="destroyMethod">
		<qualifier value="computer"/>
		<constructor-arg name="name" value="Computer"/>
		<constructor-arg name="facultyCount" value="2"/>
<!-- 		<property name="faculties"> -->
<!-- 			<set> -->
<!-- 				<ref bean="fac1"/> -->
<!-- 				<ref bean="fac2"/> -->
<!-- 			</set> -->
<!-- 		</property> -->
	</bean>
	
	<bean id="deptScience" class="com.hcl.training.pojos.Department">
		<qualifier value="science"/>
		<constructor-arg name="name" value="Science"/>
		<constructor-arg name="facultyCount" value="3"/>
	</bean>
	
	<bean id="deptMath" class="com.hcl.training.pojos.Department">
		<qualifier value="math"/>
		<constructor-arg name="name" value="Math"/>
		<constructor-arg name="facultyCount" value="2"/>
	</bean>
		
	<!-- Faculty Beans -->
	<bean id="fac1" class="com.hcl.training.pojos.Faculty">
		<constructor-arg name="name" value="Ntr" />
		<constructor-arg name="subject" value="Math" />
		<constructor-arg name="experience" value="5" />
		<constructor-arg name="departments">
			<set>
				<ref bean="deptMath"/>
				<ref bean="deptComputer"/>
			</set>
		</constructor-arg>
	</bean>
	
	<bean id="fac2" class="com.hcl.training.pojos.Faculty">
		<constructor-arg name="name" value="Ram"/>
		<constructor-arg name="subject" value="Computer"/>
		<constructor-arg name="experience" value="4"/>
		<constructor-arg name="departments">
			<set>
				<ref bean="deptComputer"/>
				<ref bean="deptMath"/>
				<ref bean="deptScience"/>
			</set>
		</constructor-arg>
	</bean>
	
	<bean id="fac3" class="com.hcl.training.pojos.Faculty">
		<constructor-arg name="name" value="Raj"/>
		<constructor-arg name="subject" value="Science"/>
		<constructor-arg name="experience" value="6"/>
		<constructor-arg name="departments">
			<set>
				<ref bean="deptScience"/>
			</set>
		</constructor-arg>
	</bean>
	
	<bean id="fac4" class="com.hcl.training.pojos.Faculty">
		<constructor-arg name="name" value="Ravi"/>
		<constructor-arg name="subject" value="Math"/>
		<constructor-arg name="experience" value="2"/>
		<constructor-arg name="departments">
			<set>
				<ref bean="deptMath"/>
			</set>
		</constructor-arg>
	</bean>
</beans>